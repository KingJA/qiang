<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/red_hi"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/ll_title_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/sel_t2g"
            android:gravity="center">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_back"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:background="@drawable/shape_circle_gray"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="14dp"
                android:background="@mipmap/ic_search"/>

            <EditText
                android:id="@+id/et_search_keyword"
                style="@style/font_f_12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_weight="1"
                android:background="@null"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="搜景点、门票..."
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:textColorHint="@color/white_hi"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_search"
            style="@style/font_f_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:text="搜索"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:layout_marginLeft="10dp"
            style="@style/font_9_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热门搜索"/>

        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_marginTop="36dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/font_9_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热门搜索"/>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginRight="6dp"
                    android:background="@mipmap/ic_history_delete"
                    android:layout_width="12dp"
                    android:layout_height="15dp"/>

                <TextView
                    style="@style/font_9_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="热门搜索"/>

            </LinearLayout>

        </RelativeLayout>
        <View style="@style/div_hor_gray"
              android:layout_marginTop="12dp"
              android:layout_marginBottom="12dp"/>

        <com.zhy.view.flowlayout.TagFlowLayout
            android:id="@+id/tfl_search_history"
            app:max_select="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.zhy.view.flowlayout.TagFlowLayout>

    </LinearLayout>


</LinearLayout>