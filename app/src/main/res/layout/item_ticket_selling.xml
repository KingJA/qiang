<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="12dp"
              android:background="@color/white_hi">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                style="@style/font_3_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:text="距抢购结束剩"/>

            <com.kingja.supershapeview.view.SuperShapeTextView
                android:id="@+id/stv_date_day"
                style="@style/font_f_13"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="2"
                app:super_cornerRadius="2dp"
                app:super_solidColor="@color/red_hi"/>

            <TextView
                style="@style/font_3_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:text="天"/>

            <com.kingja.supershapeview.view.SuperShapeTextView
                android:id="@+id/stv_date_hour"
                style="@style/font_f_13"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="2"
                app:super_cornerRadius="2dp"
                app:super_solidColor="@color/red_hi"/>

            <TextView
                style="@style/font_3_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:text="时"/>

            <com.kingja.supershapeview.view.SuperShapeTextView
                android:id="@+id/stv_date_min"
                style="@style/font_f_13"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="2"
                app:super_cornerRadius="2dp"
                app:super_solidColor="@color/red_hi"/>

            <TextView
                style="@style/font_3_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:text="分"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_ticket_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="乐清市雁荡镇"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical">


        <ImageView
            android:id="@+id/iv_ticket_img"
            android:layout_width="116dp"
            android:layout_height="116dp"
            android:layout_marginRight="12dp"
            android:src="@mipmap/ic_placeholder"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_ticket_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="乐清市雁荡镇"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="限量发售"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:text="6"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="张"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <ProgressBar
                        android:id="@+id/pb_ticket_sell"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:layout_weight="1"
                        android:progress="60"/>


                    <TextView
                        android:id="@+id/tv_ticket_selledCount"
                        style="@style/font_red_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="60"/>

                    <TextView
                        style="@style/font_red_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/"/>

                    <TextView
                        android:id="@+id/tv_ticket_totalCount"
                        style="@style/font_red_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="80"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="使用日期："/>

                    <TextView
                        android:id="@+id/tv_ticket_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2018-07-15"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:text="门市价"/>

                    <com.kingja.qiang.view.DeleteTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥"/>

                    <com.kingja.qiang.view.DeleteTextView
                        android:id="@+id/dtv_ticket_marketPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="86"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/font_orange_13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:text="抢购价"/>

                    <TextView
                        style="@style/font_orange_13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥"/>

                    <TextView
                        android:id="@+id/dtv_ticket_buyPrice"
                        style="@style/font_orange_23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="86"/>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_isSellout"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_sell_out"/>

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>