<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_hi"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_setting_personal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_hi"
        android:padding="12dp">

        <TextView
            style="@style/font_6_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人信息"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:background="@mipmap/arrow_right"/>

    </RelativeLayout>

    <View style="@style/div_hor_gray"/>

    <RelativeLayout
        android:id="@+id/rl_setting_modifyPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_hi"
        android:padding="12dp">

        <TextView
            style="@style/font_6_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改号码"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:background="@mipmap/arrow_right"/>

    </RelativeLayout>

    <View style="@style/div_hor_gray"/>

    <RelativeLayout
        android:id="@+id/rl_setting_modifyPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_hi"
        android:padding="12dp">

        <TextView
            style="@style/font_6_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:background="@mipmap/arrow_right"/>

    </RelativeLayout>

    <View style="@style/div_hor_6_gray"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_hi"
        android:padding="12dp">

        <TextView
            style="@style/font_6_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="接受消息"/>

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switch_receiveMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <View style="@style/div_hor_gray"/>

    <RelativeLayout
        android:id="@+id/rl_setting_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_hi"
        android:padding="12dp">

        <TextView
            style="@style/font_6_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="帮助中心"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:background="@mipmap/arrow_right"/>

    </RelativeLayout>

    <View style="@style/div_hor_gray"/>

    <RelativeLayout
        android:id="@+id/rl_setting_aboutUs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_hi"
        android:padding="12dp">

        <TextView
            style="@style/font_6_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于我们"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:background="@mipmap/arrow_right"/>

    </RelativeLayout>

    <View style="@style/div_hor_gray"/>


    <com.kingja.supershapeview.view.SuperShapeTextView
        android:id="@+id/stv_setting_quit"
        style="@style/font_f_17"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:gravity="center"
       android:padding="12dp"
        android:text="退出登录"
        app:super_cornerRadius="4dp"
        android:layout_marginTop="24dp"
        app:super_solidColor="@color/red_hi"/>
</LinearLayout>