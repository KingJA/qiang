<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white_hi"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="12dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iv_detail_img"
                        android:layout_width="88dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/ic_placeholder"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_detail_title"
                            style="@style/font_3_17"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:text="景区标题景区标题景区标题景区标题景区标题"/>

                        <RelativeLayout
                            android:id="@+id/rl_ticket_introduce"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp">

                            <TextView
                                style="@style/font_6_13"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="景区介绍"/>

                            <ImageView
                                android:layout_width="8dp"
                                android:layout_height="12dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:background="@mipmap/ic_arrow_detail"/>


                        </RelativeLayout>

                    </LinearLayout>


                </LinearLayout>

                <View
                    style="@style/div_hor_gray"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="12dp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="4dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="8dp"
                        android:background="@mipmap/ic_tip"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="使用说明"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <TextView
                            style="@style/font_6_13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:text="景区地址："/>

                        <TextView
                            android:id="@+id/tv_detail_area"
                            style="@style/font_6_13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="温州乐清"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <TextView
                            style="@style/font_6_13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:text="使用日期："/>

                        <TextView
                            android:id="@+id/tv_detail_date"
                            style="@style/font_red_15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2018-07-25"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <TextView
                            style="@style/font_6_13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:text="入园时间："/>

                        <TextView
                            android:id="@+id/tv_detail_time"
                            style="@style/font_6_13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="09:00"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp">

                        <TextView
                            style="@style/font_6_13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:text="入园方式："/>

                        <TextView
                            android:id="@+id/tv_detail_method"
                            style="@style/font_6_13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="换票入园"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp">

                        <TextView
                            style="@style/font_3_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:text="注："/>

                        <TextView
                            android:id="@+id/tv_detail_remark"
                            style="@style/font_3_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="换票入园"/>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="4dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="8dp"
                        android:background="@mipmap/ic_tip"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="费用说明"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp">

                    <TextView
                        style="@style/font_red_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="门市价"/>

                    <TextView
                        android:id="@+id/tv_detail_marketPrice"
                        style="@style/font_red_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50"/>

                    <TextView
                        style="@style/font_red_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:text="元"/>

                    <TextView
                        style="@style/font_red_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="抢购价"/>

                    <TextView
                        android:id="@+id/tv_detail_buyPrice"
                        style="@style/font_red_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20"/>

                    <TextView
                        style="@style/font_red_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:text="元"/>

                    <TextView
                        style="@style/font_red_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="限购"/>

                    <TextView
                        android:id="@+id/tv_detail_limitCount"
                        style="@style/font_red_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"/>

                    <TextView
                        style="@style/font_red_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:text="张"/>

                </LinearLayout>


            </LinearLayout>

            <View style="@style/div_hor_6_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">

                <TextView
                    style="@style/font_3_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="游客信息"/>

                <TextView
                    style="@style/font_9_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="需"/>

                <TextView
                    style="@style/font_red_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"/>

                <TextView
                    style="@style/font_red_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="位"/>

                <TextView
                    style="@style/font_9_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="位出行游客信息，用于入园身份验证"/>
            </LinearLayout>



            <android.support.v7.widget.RecyclerView
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:id="@+id/rv_ticket_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.kingja.supershapeview.view.SuperShapeLinearLayout
                android:visibility="gone"
                android:id="@+id/ssll_visitor_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                app:super_cornerRadius="4dp"
                app:super_solidColor="@color/bg_hi">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/font_6_13"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="姓名"/>

                    <TextView
                        android:id="@+id/tv_visitor_name"
                        style="@style/font_3_13"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text=""/>
                </LinearLayout>

                <View
                    style="@style/div_hor_gray"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/font_6_13"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="手机号"/>

                    <TextView
                        android:id="@+id/tv_visitor_phone"
                        style="@style/font_3_13"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text=""/>
                </LinearLayout>

                <View
                    style="@style/div_hor_gray"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/font_6_13"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="身份证号"/>

                    <TextView
                        android:id="@+id/tv_visitor_idcode"
                        style="@style/font_3_13"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text=""/>
                </LinearLayout>

            </com.kingja.supershapeview.view.SuperShapeLinearLayout>


        </LinearLayout>


    </ScrollView>

    <View style="@style/div_hor_gray"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <com.kingja.qiang.view.ChangeNumberView
            android:id="@+id/ccv_ticket_detail"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:layout_width="100dp"
            android:layout_height="28dp"/>

        <TextView
            android:id="@+id/tv_detail_buy"
            style="@style/font_f_18"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/red_hi"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="立即抢购"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@id/tv_detail_buy">

            <TextView
                style="@style/font_red_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总价：¥"/>

            <TextView
                android:id="@+id/tv_detail_totalPrice"
                style="@style/font_red_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120"/>
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>