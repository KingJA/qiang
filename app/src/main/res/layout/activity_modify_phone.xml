<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_et"
        android:padding="10dp">

        <TextView
            style="@style/font_red_13"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+86"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:background="@color/diver"/>

        <EditText
            style="@style/font_3_13"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="@null"
            android:hint="请输入新的手机号"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_et"
        android:gravity="center_vertical"
        android:padding="10dp">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_register_lock"
                android:text="+86"/>
        </FrameLayout>


        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:background="@color/diver"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5">

            <EditText
                style="@style/font_3_13"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_weight="5"
                android:background="@null"
                android:hint="请输入验证码"/>

            <com.kingja.supershapeview.view.SuperShapeTextView
                style="@style/font_red_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:text="获取验证码"
                app:super_cornerRadius="4dp"
                app:super_solidColor="@color/white_hi"
                app:super_strokeColor="@color/red_hi"
                app:super_strokeWidth="1dp"/>

        </LinearLayout>


    </LinearLayout>

    <TextView
        style="@style/Action_Button"
        android:layout_marginTop="42dp"
        android:text="确定"/>
</LinearLayout>