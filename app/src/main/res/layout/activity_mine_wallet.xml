<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_hi"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="@mipmap/bg_wallet"
        android:gravity="center">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/font_f_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="28dp"
                android:text="账户余额"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/font_f_23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:text="¥"/>

                <TextView
                    android:id="@+id/tv_wallet_money"
                    style="@style/font_f_33"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="_.__"/>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <com.kingja.supershapeview.view.SuperShapeTextView
        android:id="@+id/stv_recharge"
        style="@style/font_f_13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:padding="12dp"
        android:text="充值"
        app:super_cornerRadius="4dp"
        app:super_solidColor="@color/red_hi"/>

    <com.kingja.supershapeview.view.SuperShapeTextView
        android:id="@+id/stv_deal"
        style="@style/font_3_13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:padding="12dp"
        android:text="交易明细"
        app:super_cornerRadius="4dp"
        app:super_solidColor="@color/bg_hi"
        app:super_strokeWidth="1dp"
        app:super_strokeColor="@color/gray_hi"/>

</LinearLayout>