<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_hi"
              android:orientation="vertical"
              android:padding="20dp">


    <com.kingja.supershapeview.view.SuperShapeEditText
        android:layout_marginBottom="12dp"
        android:id="@+id/set_modifyPassword_new"
        style="@style/font_3_13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="新密码"
        android:paddingBottom="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp"
        app:super_cornerRadius="6dp"
        app:super_solidColor="@color/white_hi"
        app:super_strokeColor="@color/diver"
        app:super_strokeWidth="1px"/>

    <com.kingja.supershapeview.view.SuperShapeEditText
        android:id="@+id/set_modifyPassword_repeat"
        style="@style/font_3_13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="确认密码"
        android:paddingBottom="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp"
        app:super_cornerRadius="6dp"
        app:super_solidColor="@color/white_hi"
        app:super_strokeColor="@color/diver"
        app:super_strokeWidth="1px"/>

    <TextView
        style="@style/font_6_12"
        android:layout_marginTop="12dp"
        android:text="密码长度6-12位，必须包含数字，字母、符号，至少2种或以上元素"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_modifyPassword_confirm"
        style="@style/Action_Button"
        android:layout_marginTop="36dp"
        android:text="确定"/>

</LinearLayout>