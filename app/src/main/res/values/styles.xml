<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/red_hi</item>
        <item name="colorPrimaryDark">@color/red_hi</item>
        <item name="colorAccent">@color/red_hi</item>
    </style>

    <style name="PhotoTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/red_hi</item>
        <item name="colorPrimaryDark">@color/red_hi</item>
        <item name="toolbar">@style/Toolbar.Zhihu</item>
        <item name="album.title.color">@color/zhihu_album_title_text</item>
        <item name="album.count.color">@color/zhihu_album_count_text</item>
        <item name="album.selected">@android:color/white</item>
        <item name="album.placeholder">@color/zhihu_album_placeholder</item>
        <item name="album.emptyView">@drawable/ic_empty_zhihu</item>
        <item name="album.emptyView.color">@color/zhihu_empty_view</item>
        <item name="item.placeholder">@color/zhihu_item_placeholder</item>
        <item name="page.bg">@color/zhihu_page_bg</item>
        <item name="bottomToolbar.bg">@color/zhihu_bottom_toolbar_bg</item>
        <item name="bottomToolbar.preview.color">@color/zhihu_bottom_toolbar_preview</item>
        <item name="bottomToolbar.apply.color">@color/zhihu_bottom_toolbar_apply</item>
        <item name="listPopupWindowStyle">@style/Popup.Zhihu</item>
        <item name="capture.color">@color/zhihu_capture</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/red_hi</item>
        <item name="colorPrimaryDark">@color/red_hi</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Fullscreen">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="RectCheckbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_cb</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
    </style>

    <style name="CircleCheckbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_cb_circle</item>
    </style>

    <style name="MyEditTextLine" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/gray_hi</item>
        <item name="colorControlActivated">@color/red_hi</item>
    </style>

    <style name="Action_Button">
        <item name="android:background">@drawable/shape_button</item>
        <item name="android:textColor">@color/white_hi</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BgNullEditText">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/c_3</item>
        <item name="android:textSize">15sp</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>

